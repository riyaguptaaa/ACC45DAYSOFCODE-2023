#include <stdio.h>

int main() {
    double num1, num2, num3, num4;
    double sum;

    // Input four numbers
    printf("Enter the first number: ");
    scanf("%lf", &num1);
    
    printf("Enter the second number: ");
    scanf("%lf", &num2);
    
    printf("Enter the third number: ");
    scanf("%lf", &num3);
    
    printf("Enter the fourth number: ");
    scanf("%lf", &num4);

    // Calculate the sum
    sum = num1 + num2 + num3 + num4;

    // Display the result
    printf("The sum of %.2lf, %.2lf, %.2lf, and %.2lf is: %.2lf\n", num1, num2, num3, num4, sum);

    return 0;
}
